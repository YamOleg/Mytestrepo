import random

def guess_the_number():
    number = random.randint(1, 100)  # –ó–∞–≥–∞–¥–∞—Ç—å —á–∏—Å–ª–æ –æ—Ç 1 –¥–æ 100
    attempts = 0

    print("–Ø –∑–∞–≥–∞–¥–∞–ª —á–∏—Å–ª–æ –æ—Ç 1 –¥–æ 100. –ü–æ–ø—Ä–æ–±—É–π —É–≥–∞–¥–∞—Ç—å!")

    while True:
        try:
            guess = int(input("–í–≤–µ–¥–∏ —Å–≤–æ–π –≤–∞—Ä–∏–∞–Ω—Ç: "))
            attempts += 1

            if guess < number:
                print("–ë–æ–ª—å—à–µ! üîº")
            elif guess > number:
                print("–ú–µ–Ω—å—à–µ! üîΩ")
            else:
                print(f"üéâ –ü–æ–∑–¥—Ä–∞–≤–ª—è—é! –¢—ã —É–≥–∞–¥–∞–ª —á–∏—Å–ª–æ {number} –∑–∞ {attempts} –ø–æ–ø—ã—Ç–æ–∫.")
                break
        except ValueError:
            print("‚ùå –ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –≤–≤–µ–¥–∏ —á–∏—Å–ª–æ!")

guess_the_number()
